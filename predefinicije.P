% for_loop(Start, End) – ispisuje brojeve od Start do End-1
for_loop(Start, End) :-
    Max is End - 1,     % računamo granicu
    for_loop_range(Start, Max).

for_loop_range(I, Max) :-
    I =< Max,
    writeln(I),
    I1 is I + 1,
    for_loop_range(I1, Max).
for_loop_range(I, Max) :-
    I > Max.            % završetak rekurzije